<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/header2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:textColorHint">@color/darkWhite</item>
        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
    </style>

    <style name="my_preference_theme" parent="@style/PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/preference_switch_compat</item>
    </style>

    <style name="preference_switch_compat">
        <item name="android:layout">@layout/preference_description</item>
    </style>

    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PreferenceListHeader" parent="Widget.TextView.ListSeparator">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="PreferenceScreen" parent="android:Theme.NoTitleBar">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:background">#F2B1DBF3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="menuTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">Monserrat</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/header2</item>
    </style>

    <style name="SplashActivty">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="settingsTitleStyle">
        <item name="android:textColor">@color/titleFontColor</item>
        <item name="android:textSize">42dp</item>
    </style>

    <style name="settingsDescriptionStyle">
        <item name="android:textColor">@color/descriptionFontColor</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="loginTextFieldsStyle">
        <item name="android:textColor">@color/darkWhite</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColorHint">@color/darkWhite</item>
    </style>

    <style name="loginSignUpStyle">
        <item name="android:textColor">@color/darkWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColorHint">@color/darkWhite</item>

    </style>

    <style name="loadingStyle">
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:background">#FFEAEAEA</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
